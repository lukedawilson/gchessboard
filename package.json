{
  "name": "gchessboard",
  "version": "0.0.1",
  "description": "An accessible, customizable and dependency-free chessboard web component.",
  "author": "Milind Ganjoo",
  "license": "MIT",
  "main": "dist/gchessboard.cjs.js",
  "module": "dist/gchessboard.es.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "build": "tsc && vite build",
    "build:api": "wca analyze src/ChessBoardElement.ts --outFile API.md",
    "build:watch": "vite build --watch",
    "test": "playwright test",
    "test:debug": "PWDEBUG=1 playwright test",
    "check:format": "prettier --check .",
    "check:lint": "eslint .",
    "check:stylelint": "stylelint \"**/*.css\"",
    "check:types": "tsc --noEmit",
    "fix:format": "prettier --write .",
    "fix:lint": "eslint --fix .",
    "fix:stylelint": "stylelint --fix \"**/*.css\"",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.18.1",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-prettier": "^2.0.0",
    "typescript": "^4.4.4",
    "vite": "^2.7.2",
    "vite-dts": "^1.0.4",
    "web-component-analyzer": "^1.1.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,md,json,yml,yaml}": "prettier --write",
    "*.css": "stylelint --fix"
  }
}
